<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:src="@drawable/homebanner2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homebtn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homebtn1"
                android:backgroundTint="#00ff0000"/>

            <ImageButton
                android:id="@+id/homebtn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homebtn2"
                android:backgroundTint="#00ff0000"/>


            <ImageButton
                android:id="@+id/homebtn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homebtn3"
                android:backgroundTint="#00ff0000"/>

            <ImageButton
                android:id="@+id/homebtn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homebtn4"
                android:backgroundTint="#00ff0000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPriority"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_gravity="center_horizontal"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:numColumns="auto_fit"
            android:columnWidth="100dp"
            android:layout_gravity="center"
            android:id="@+id/grid">
        </GridView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>